extends layout.pug

block content
  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box

        h1 #{project.project_name}
        p #{project.description}
        p Learning Objectives: #{project.focus}

      .project-tech-links-box.box
        h6 Technologies
        ul
          each tech in project.technologies 
            li #{tech}
          
        a.btn-link(href=`${project.live_link}`, target='_blank') Live Demo
        a.btn-link(href=`${project.github_link}`,  target='_blank') GitHub Repo

    .project-img-box.box
      img.project-img(src=`${project.image_urls[1].img}`, alt='')
      img.project-img(src=`${project.image_urls[2].img}`, alt='')
      img.project-img(src=`${project.image_urls[3].img}`, alt='')

    nav.nav
      a(href='/')
        span &larr;
        |  Back
